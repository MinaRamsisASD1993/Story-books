<h2>Hey {{user.firstName}}</h2>
{{#if stories}}
<h3>Your Stories</h3>
<table class="centered striped">
    <thead>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/show/{{this._id}}">{{this.title}}</a></td>
            <td>{{formatDate this.date}}</td>
            <td>{{this.status}}</td>
            <td><a href="/stories/edit/{{this._id}}" class="btn"><i class="fa fa-edit"></i> Edit</a></td>
            <td>
                <form action="/stories/delete/{{this._id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn red"><i class="fa fa-trash"></i> Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>
{{else}}
<p>You have not created any stories yet.</p>
{{/if}}